{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
          "warn",
          {
            "singleQuote": true,
            "trailingComma": "none"
          }
        ],
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off",
        "no-console": "off",
        "indent": ["error", 2]
      }
}
